pipeline {
    agent any

    environment {
        PATH = "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
        DOCKER_HOST = "unix:///Users/mithunamesuk/.orbstack/run/docker.sock"
    }

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/SianCS/myweb-lap.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-web-cicd .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 5000:5000 --name web-app my-web-cicd'
            }
        }
    }
}
